<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/integration"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans.xsd
			http://www.springframework.org/schema/integration
			http://www.springframework.org/schema/integration/spring-integration.xsd">


	<publish-subscribe-channel id="warehousechannel"/>
	<publish-subscribe-channel id="shippingchannel" />
	<publish-subscribe-channel id="normalshippingchannel" />
	<publish-subscribe-channel id="nextdayshippingchannel" />
	<publish-subscribe-channel id="internationalshippingchannel" />
	<publish-subscribe-channel id="domesticshippingchannel" />
	<publish-subscribe-channel id="orderreceivechannel" />
	<publish-subscribe-channel id="visapaymentchannel"/>
	<publish-subscribe-channel id="mastercardpaymentchannel" />
	<publish-subscribe-channel id="paypalpaymentchannel" />
	<publish-subscribe-channel id="paymentchannel" />

	<service-activator input-channel="warehousechannel"
					   ref="monitor"
					   method="warehouse"/>

	<service-activator input-channel="warehousechannel"
	                   output-channel="shippingchannel"
	                   ref="warehouseservice"
	                   method="checkStock"/>



	<router method="route"
			input-channel="domesticshippingchannel">
		<beans:bean class="esb.ShippingRouter" />
	</router>

	<router method="route"
			input-channel="shippingchannel">
		<beans:bean class="esb.InternationalShippingRouter" />
	</router>

	<router method="route"
			input-channel="paymentchannel">
		<beans:bean class="esb.PaymentRouter" />
	</router>

	<service-activator input-channel="internationalshippingchannel"
					   ref="monitor"
					   method="internationalshipping" />

	<service-activator input-channel="internationalshippingchannel"
					   output-channel="paymentchannel"
					   ref="internationalshippingservice"
					   method="ship" />

	<service-activator input-channel="normalshippingchannel"
					   ref="monitor"
					   method="normalshipping"/>

	<service-activator input-channel="normalshippingchannel"
					   output-channel="paymentchannel"
					   ref="shippingservice"
					   method="ship"/>


	<service-activator input-channel="nextdayshippingchannel"
					   ref="monitor"
					   method="nextdayshipping" />

	<service-activator input-channel="nextdayshippingchannel"
					   output-channel="paymentchannel"
					   ref="nextdayshippingservice"
					   method="ship" />


	<service-activator input-channel="visapaymentchannel"
					   ref="monitor"
					   method="visapayment" />

	<service-activator input-channel="visapaymentchannel"
					   ref="visaservice"
					   method="pay" />

	<service-activator input-channel="mastercardpaymentchannel"
					   ref="monitor"
					   method="mastercardpayment" />

	<service-activator input-channel="mastercardpaymentchannel"
					   ref="mastercardservice"
					   method="pay" />

	<service-activator input-channel="paypalpaymentchannel"
					   ref="monitor"
					   method="paypalpayment" />

	<service-activator input-channel="paypalpaymentchannel"
					   ref="paypalservice"
					   method="pay" />

	<beans:bean id="warehouseservice" class="esb.WarehouseActivator"/>
	<beans:bean id="shippingservice" class="esb.ShippingActivator"/>
	<beans:bean id="nextdayshippingservice" class="esb.NextDayShippingActivator" />
	<beans:bean id="internationalshippingservice" class="esb.InternationalShippingActivator" />
	<beans:bean id="mastercardservice" class="esb.MasterCardActivator"/>
	<beans:bean id="visaservice" class="esb.VisaActivator"/>
	<beans:bean id="paypalservice" class="esb.PayPalActivator" />
	<beans:bean id="monitor" class="esb.MonitorActivator" />
</beans:beans>
